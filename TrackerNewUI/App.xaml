<Application x:Class="TrackerNewUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TrackerNewUI"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="{x:Type Window}">
            <Setter Property="FontFamily" Value="Consolas" />
            <Setter Property="FontSize" Value="16" />
        </Style>

        <Color x:Key="AppWhite">#fefae0</Color>
        <Color x:Key="AppDarkGreen">#283618</Color>
        <Color x:Key="AppLightGreen">#606C38</Color>
        <Color x:Key="AppDarkBrown">#bc6c25</Color>
        <Color x:Key="AppLightBrown">#dda15e</Color>
    </Application.Resources>
</Application>
